# ============================================
# TenChat NeuroBooster v1.2.1 Configuration
# ============================================

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/tenchat_booster.db

# AI Configuration
AI_BASE_URL=https://api.openai.com/v1
AI_API_KEY=your_api_key_here

# AI Models
AI_MODEL_COMMENTS=openai/gpt-4o-mini
AI_MODEL_ARTICLES=anthropic/claude-3.5-haiku
AI_MODEL_ANALYTICS=deepseek/deepseek-chat

# TenChat Settings
TENCHAT_BASE_URL=https://tenchat.ru

# ============================================
# Safety Limits (per day) - CONSERVATIVE!
# ============================================
DAILY_LIMIT_LIKES=50
DAILY_LIMIT_FOLLOWS=20
DAILY_LIMIT_POSTS=3
DAILY_LIMIT_COMMENTS=15
DAILY_LIMIT_MESSAGES=20
DAILY_LIMIT_CONNECTIONS=15

# ============================================
# Human-like Behavior Settings
# ============================================
# Base delays (seconds) - will be randomized
MIN_ACTION_DELAY=45
MAX_ACTION_DELAY=180

# Extended delays for risky actions (DMs, cold outreach)
MIN_RISKY_DELAY=120
MAX_RISKY_DELAY=360

# Activity windows (hours, 24h format)
ACTIVITY_WINDOW_START=8
ACTIVITY_WINDOW_END=22

# Session behavior
MIN_SESSION_ACTIONS=3
MAX_SESSION_ACTIONS=12
SESSION_PAUSE_MIN=300
SESSION_PAUSE_MAX=900

# ============================================
# Retry & Circuit Breaker
# ============================================
MAX_RETRIES=3
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIME=1800

# ============================================
# Task Worker
# ============================================
NUM_TASK_WORKERS=2
TASK_QUEUE_MAX_SIZE=100

# ============================================
# Anti-Detection
# ============================================
RANDOMIZE_ACTION_ORDER=true
ENABLE_NOISE_ACTIONS=true
NOISE_ACTION_PROBABILITY=0.15

# Server
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
STREAMLIT_PORT=8501
